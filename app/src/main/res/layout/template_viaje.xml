<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View" alias="v"/>
        <variable
            name="viaje"
            type="luisfelipeholguin.traveler.models.Viaje"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    app:imgUrl="@{viaje.imagen}"
                    android:background="#444444"
                    android:scaleType="centerInside"/>
                <FrameLayout
                    android:id="@+id/fr"
                    android:layout_width="10dp"
                    android:layout_height="120dp"
                    android:layout_toRightOf="@id/img"></FrameLayout>

                <TextView
                    android:id="@+id/text_destino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/fr"
                    android:text="Destino"
                    tools:text="Destino"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/destino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/text_destino"
                    android:layout_marginLeft="5dp"
                    android:text="@{viaje.destino}"
                    android:textStyle="bold"
                    tools:text="Desino"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/text_cupos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/fr"
                    android:text="Cupos"
                     tools:text="Cupos"
                    android:layout_marginTop="40dp"/>

                <TextView
                    android:id="@+id/puestos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/text_cupos"
                    android:text='@{""+viaje.asientos}'
                    android:textStyle="bold"
                    tools:text="Asientos"
                    android:layout_marginTop="40dp"/>

                <TextView
                    android:id="@+id/precio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_toRightOf="@+id/img"
                    android:text='@{ "$" +viaje.precio}'
                    tools:text="Precio"
                    android:textColor="#b79114"
                    android:textSize="16dp"
                    android:layout_marginTop="85dp"
                    android:layout_marginRight="5dp"/>


            </RelativeLayout>

        </android.support.v7.widget.CardView>



    </FrameLayout>
</layout>