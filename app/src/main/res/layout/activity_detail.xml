<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viaje"
            type="luisfelipeholguin.traveler.models.Viaje"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:imgUrl="@{viaje.imagen}"
                    android:scaleType="centerCrop"
                    app:layout_scrollFlags="scroll|enterAlways"/>

                <TextView
                    android:id="@+id/info"
                    android:layout_below="@+id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="@dimen/margin_detail"
                    android:layout_marginLeft="@dimen/margin_detail"
                    android:text="Informacion General"/>


                    <TextView
                        android:id="@+id/text_origen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/info"
                        android:layout_marginTop="@dimen/margin_detail"
                        android:layout_marginLeft="@dimen/margin_detail"
                        android:text="Origen"
                        tools:text="Origen" />

                    <TextView
                        android:id="@+id/origen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/text_origen"
                        android:layout_below="@+id/info"
                        android:layout_marginLeft="@dimen/margin_detail"
                        android:layout_marginTop="@dimen/margin_detail"
                        android:text="@{viaje.origen}"
                        android:textStyle="bold"
                        tools:text="Origen" />

                    <TextView
                        android:id="@+id/text_destino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_origen"
                        android:layout_marginTop="@dimen/margin_detail"
                        android:layout_marginLeft="@dimen/margin_detail"
                        android:text="Destino"
                        tools:text="Destino" />

                    <TextView
                        android:id="@+id/destino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/text_destino"
                        android:layout_marginLeft="@dimen/margin_detail"
                        android:layout_marginTop="@dimen/margin_detail"
                        android:layout_below="@+id/origen"
                        android:text="@{viaje.destino}"
                        android:textStyle="bold"
                        tools:text="Desino" />

                    <TextView
                        android:id="@+id/text_cupos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_destino"
                        android:text="Cupos"
                        android:layout_marginTop="@dimen/margin_detail"
                        android:layout_marginLeft="@dimen/margin_detail"
                        tools:text="Cupos" />

                    <TextView
                        android:id="@+id/cupos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_detail"
                        android:layout_marginTop="@dimen/margin_detail"
                        android:layout_toRightOf="@+id/text_cupos"
                        android:layout_below="@+id/destino"
                        android:text='@{""+viaje.asientos}'
                        android:textStyle="bold"
                        tools:text="Asientos" />

                    <TextView
                        android:id="@+id/text_fecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_cupos"
                        android:text="Fecha"
                        android:layout_marginTop="@dimen/margin_detail"
                        android:layout_marginLeft="@dimen/margin_detail"
                        tools:text="Fecha" />


                <TextView
                    android:id="@+id/precio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/info"
                    android:textColor="#b79114"
                    android:textSize="16dp"
                    android:text='@{ "$" +viaje.precio}'
                    android:layout_marginRight="@dimen/margin_detail"
                    tools:text="Precio" />

                    <TextView
                        android:id="@+id/fecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_detail"
                        android:layout_marginTop="@dimen/margin_detail"
                        android:layout_toRightOf="@+id/text_fecha"
                        android:layout_below="@+id/cupos"
                        android:text='@{""+viaje.fecha}'
                        android:textStyle="bold"
                        tools:text="Fecha" />


                    <TextView
                        android:id="@+id/text_carro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_fecha"
                        android:text="Vehiculo"
                        android:layout_marginTop="@dimen/margin_detail"
                        android:layout_marginLeft="@dimen/margin_detail"
                        tools:text="Vehiculo" />

                    <TextView
                        android:id="@+id/carro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_detail"
                        android:layout_marginTop="@dimen/margin_detail"
                        android:layout_marginBottom="@dimen/margin_detail"
                        android:layout_toRightOf="@+id/text_carro"
                        android:layout_below="@+id/fecha"
                        android:text='@{""+viaje.carro}'
                        android:textStyle="bold"
                        tools:text="Carro" />



                <TextView
                    android:id="@+id/infouser"
                    android:layout_below="@+id/carro"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="@dimen/margin_detail"
                    android:layout_marginLeft="@dimen/margin_detail"
                    android:text="Informacion Contacto"/>

                    <TextView
                        android:id="@+id/text_contacto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/infouser"
                        android:text="Contacto"
                        android:layout_marginTop="@dimen/margin_detail"
                        android:layout_marginLeft="@dimen/margin_detail"
                        tools:text="Contacto" />

                    <TextView
                        android:id="@+id/contacto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_detail"
                        android:layout_marginTop="@dimen/margin_detail"
                        android:layout_toRightOf="@+id/text_contacto"
                        android:layout_below="@+id/infouser"
                        android:text='@{""+viaje.contacto}'
                        android:textStyle="bold"
                        tools:text="Contacto" />

                <FrameLayout
                    android:id="@+id/fr"
                    android:layout_below="@+id/contacto"
                    android:layout_width="match_parent"
                    app:layout_scrollFlags="scroll|enterAlways"
                    android:layout_height="40dp"></FrameLayout>

                <TableLayout
                    android:layout_below="@+id/fr"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*">

                <TableRow>

                        <Button
                            android:id="@+id/llamar"
                            android:text="Llamar"
                            android:layout_below="@+id/fr"
                            android:background="@color/colorPrimaryDark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorAccent"
                            android:layout_margin="1dp"/>


                        <Button
                            android:id="@+id/reservar"
                            android:text="Reservar"
                            android:textColor="@color/colorAccent"
                            android:background="@color/colorPrimaryDark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"/>

                </TableRow>

                </TableLayout>

            </RelativeLayout>



        </android.support.v4.widget.NestedScrollView>



    </android.support.design.widget.CoordinatorLayout>


</layout>