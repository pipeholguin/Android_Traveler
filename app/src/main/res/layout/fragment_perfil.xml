<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="onClick"
            type="android.view.View.OnClickListener"/>
        <variable
            name="usuario"
            type="luisfelipeholguin.traveler.models.Usuario"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/head"
            android:background="@color/text2"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile"
            android:layout_width="@dimen/head_prfile"
            android:layout_height="@dimen/head_prfile"
            android:layout_margin="@dimen/small"
            android:src="@drawable/gris"
            android:layout_alignBottom="@id/banner"

            />

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Headline"
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:padding="@dimen/small"
            tools:text="Usuario NN"
            android:layout_toRightOf="@id/profile"
            android:layout_alignBottom="@id/profile"
            />

        <TableLayout
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_below="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>
                <ImageView
                    android:id="@+id/img_usr"
                    android:src="@drawable/ic_usr"/>

                <TextView
                    android:textSize="@dimen/text_small"
                    android:id="@+id/usuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_detail"
                    android:layout_marginLeft="@dimen/margin_detail"
                    tools:text="Usuario" />
                    />

            </TableRow>

            <TableRow>
                <ImageView
                    android:src="@drawable/ic_call"
                    android:layout_marginRight="@dimen/small"/>

                <TextView
                    android:textSize="@dimen/text_small"
                    android:id="@+id/contacto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contacto"
                    android:layout_marginTop="@dimen/margin_detail"
                    android:layout_marginLeft="@dimen/margin_detail"
                    tools:text="Contacto" />



            </TableRow>

        </TableLayout>

        <Button
            android:background="@drawable/button"
            android:layout_above="@+id/close"
            android:text="@string/actualizar_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:setOnClickListener="@{onClick}"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="@dimen/small"/>

        <Button
            android:id="@+id/close"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/text"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cerrar_sesion"
            app:setOnClickListener="@{onClick}"/>

    </RelativeLayout>

</layout>